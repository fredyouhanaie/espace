{erl_opts, [debug_info]}.
{deps, []}.

{shell, [{apps, [espace]}]}.

{relx, [{release, { espace, "0.3.0" },
         [espace,
          sasl]},

        {sys_config, "./config/sys.config"},
        {vm_args, "./config/vm.args"},

        {dev_mode, true},
        {include_erts, false},

        {extended_start_script, true}]
}.

{profiles, [{prod, [{relx, [{dev_mode, false},
                            {include_erts, true}]}]
            }]
}.

%% ignore the supervisor init/1 callback warnings
{dialyzer, [{warnings, [no_behaviours]}]}.
