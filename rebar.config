{erl_opts, [debug_info]}.

{deps,
 [
  etsmgr,
  observer_cli
 ]}.

{plugins, [ rebar3_hex ]}.

{shell, [ {config, "config/shell.config"} ]}.

{profiles,
 [ {dev, [ {edoc_opts, [{private, true}]} ]},

   {chunks, [ {edoc_opts, [{doclet, edoc_doclet_chunks},
                           {layout, edoc_layout_chunks},
                           {preprocess, true}
                          ]} ]}
 ]}.
